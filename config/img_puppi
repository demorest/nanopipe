if ($int[0]:freq[0]>1000.0 && $ext:stt_imjd>57325 && $ext:stt_imjd<=57567) img correct 3.26e-05 2.66e-05
if ($int[0]:freq[0]>1000.0 && $ext:stt_imjd>57567 && $ext:stt_imjd<=57820) img correct 3.56e-05 3.33e-05
if ($int[0]:freq[0]>1000.0 && $ext:stt_imjd>57820 && $ext:stt_imjd<=57940) img correct 3.39e-05 3.13e-05

if ($int[0]:freq[0]<500.0 && $int[0]:freq[0]>370.0) img dir=-1 fadc=750 fcenter=430 strict=0
if ($int[0]:freq[0]<370.0) img dir=-1 fadc=750 fcenter=327 strict=0
